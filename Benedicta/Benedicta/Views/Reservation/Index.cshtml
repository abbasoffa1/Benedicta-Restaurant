

@model Benedicta.Models.AddView

@{
    ViewBag.Title = "Benedicta";
}


@foreach (var item in Model.Settings)
{
    <section id="ReserveBg"  style="background-image: url(../../Uploads/@item.NavbarPhoto);">
        <div class="container-fluid">
            <div class="row text-center">
                <div class="col-12 mb-3">
                    <h1>Reservation</h1>
                </div>
            </div>
        </div>
    </section>
}

<!-- JOIN US SECTION STARTS -->

<section id="JoinUs">
    <div class="container">
        <div class="row">


            <div class="col-lg-4 text-center">
                <h5>Address</h5>

                @foreach (var item in Model.Settings)
                {
                    <p>@item.Adress</p>

                }

            </div>


            <div class="col-lg-4 text-center">
                <h5>Phones</h5>

                @foreach (var item in Model.Settings)
                {
                    <p>@item.Phone</p>

                }

            </div>


            <div class="col-lg-4 text-center">
                <h5>Join Us</h5>

                @foreach (var item in Model.Settings)
                {
                    <a class="link" href=""><i class="@item.Facebook"></i></a>
                    <a class="link" href=""><i class="@item.Instagram" style="padding-left:22px;"></i></a>
                }

            </div>

        </div>
    </div>
</section>
<!-- JOIN US SECTION ENDS -->
<!-- RESERVE TABLE SECTION STARTS -->
<section id="ReserveTable">
    <div class="container">
        <div class="row">
            <div class="col-lg-12 text-center">
                <h5>Did you like it?</h5>
                <h1>Reserve a table</h1>
                <hr>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12">
                <div class="reserveForm">
                    <form action="@Url.Action("index")" method="post">
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label for="inputEmail4">Name*</label>
                                <input type="text" class="form-control" id="inputEmail4" name="Name">
                            </div>
                            <div class="form-group col-md-4">
                                <label for="inputPassword4">Email*</label>
                                <input type="text" class="form-control" id="inputPassword4" name="Email">
                            </div>
                            <div class="form-group col-md-4">
                                <label for="inputPassword4">Phone*</label>
                                <input type="text" class="form-control" id="inputPassword4" name="Phone">
                            </div>
                            <div class="form-group col-md-4">
                                <label for="inputAddress">Date*</label>
                                <input type="date" class="form-control" id="inputAddress" name="Date">
                            </div>
                            <div class="form-group col-md-4">
                                <label for="inputState">Time*</label>
                                <select id="inputState" class="form-control" name="Time">
                                    <option selected>Choose...</option>
                                    <option>15:00</option>
                                    <option>16:00</option>
                                    <option>17:00</option>
                                    <option>18:00</option>
                                    <option>19:00</option>
                                </select>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="inputAddress">Seats*</label>
                                <input type="number" min="1" class="form-control" id="inputAddress" name="Seats">
                            </div>
                            <div class="form-group col-md-12">
                                <label for="exampleFormControlTextarea2">Special Requests*</label>
                                <textarea class="form-control rounded-0" id="exampleFormControlTextarea2"
                                          rows="5" name="SpecialRequests"></textarea>
                            </div>
                        </div>
                        <button type="submit"
                                style="margin: 0 auto;display:block ;margin-top: 15px; margin-bottom: 80px;"
                                class="showAllMenu">
                            Book
                            Now
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- RESERVE TABLE SECTION ENDS -->
